<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Cupcake â€“ Your Profile</title>
  
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet"/>
  
  <style>
    * { margin:0; padding:0; box-sizing:border-box; }
    
    body {
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      background: #fff8f5;
      color: #2d1b12;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
      background: url('https://images.unsplash.com/photo-1550617931-eb3a88e84519?auto=format&fit=crop&q=80') center/cover no-repeat;
    }
    
    .overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to bottom, rgba(255,245,240,0.92), rgba(255,230,235,0.94));
      z-index: -1;
    }
    
    .profile-card {
      background: white;
      border-radius: 24px;
      box-shadow: 0 20px 50px rgba(0,0,0,0.2);
      padding: 3rem 2.2rem;
      width: 100%;
      max-width: 500px;
      text-align: center;
      position: relative;
      z-index: 1;
    }
    
    .avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 5px solid #ffebee;
      margin-bottom: 1.5rem;
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .avatar-placeholder {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: #ffebee;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3.5rem;
      margin: 0 auto 1.5rem;
      border: 5px solid #ffebee;
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    h1 {
      font-size: 2.4rem;
      color: #c44569;
      margin-bottom: 0.5rem;
    }
    
    .email {
      font-size: 1.15rem;
      color: #555;
      margin-bottom: 2rem;
    }
    
    .info {
      background: #fff5f5;
      border-radius: 16px;
      padding: 1.5rem;
      margin: 1.5rem 0;
      text-align: left;
    }
    
    .info p {
      margin: 0.8rem 0;
      font-size: 1.05rem;
    }
    
    .info strong {
      color: #c44569;
    }
    
    .signout-btn {
      padding: 14px 40px;
      font-size: 1.1rem;
      font-weight: 600;
      color: white;
      background: #e84a5f;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      margin-top: 2rem;
      box-shadow: 0 8px 25px rgba(232,74,95,0.35);
      transition: all 0.3s;
    }
    
    .signout-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(232,74,95,0.5);
    }
    
    .loading {
      font-size: 1.3rem;
      color: #777;
    }
    
    .redirect-msg {
      font-size: 1.2rem;
      color: #c62828;
      margin-top: 2rem;
    }
  </style>
</head>
<body>

  <div class="overlay"></div>

  <div class="profile-card" id="profileContent">
    <div id="loading" class="loading">Loading your profile...</div>
    
    <div id="userInfo" style="display:none;">
      <img id="photo" class="avatar" alt="Profile Photo" style="display:none;">
      <div id="placeholder" class="avatar-placeholder">ðŸ‘¤</div>
      
      <h1 id="name">Welcome</h1>
      <p class="email" id="email"></p>
      
      <div class="info">
        <p><strong>User ID:</strong> <span id="uid"></span></p>
        <p><strong>Last Sign-in:</strong> <span id="lastSignIn"></span></p>
        <p><strong>Account Created:</strong> <span id="creationTime"></span></p>
      </div>
      
      <button id="signOutBtn" class="signout-btn">Sign Out</button>
    </div>
    
    <p id="redirectMsg" class="redirect-msg" style="display:none;">
      No user signed in. Redirecting to login...
    </p>
  </div>

  <!-- Firebase SDK v10 modular -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.14.1/firebase-app.js";
    import { 
      getAuth, 
      onAuthStateChanged,
      signOut 
    } from "https://www.gstatic.com/firebasejs/10.14.1/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCPTCZqUPrHgfwqVmNe4aLtVLEXqAdLpmA",
      authDomain: "cupcake-202c4.firebaseapp.com",
      projectId: "cupcake-202c4",
      storageBucket: "cupcake-202c4.firebasestorage.app",
      messagingSenderId: "549565498078",
      appId: "1:549565498078:web:4efd4d7c7fd4561882784f",
      measurementId: "G-9PK7NV0K5N"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const loadingEl     = document.getElementById('loading');
    const userInfoEl    = document.getElementById('userInfo');
    const redirectMsgEl = document.getElementById('redirectMsg');
    const photoEl       = document.getElementById('photo');
    const placeholderEl = document.getElementById('placeholder');
    const nameEl        = document.getElementById('name');
    const emailEl       = document.getElementById('email');
    const uidEl         = document.getElementById('uid');
    const lastSignInEl  = document.getElementById('lastSignIn');
    const creationEl    = document.getElementById('creationTime');
    const signOutBtn    = document.getElementById('signOutBtn');

    onAuthStateChanged(auth, (user) => {
      loadingEl.style.display = 'none';

      if (user) {
        // User is signed in â†’ show profile
        userInfoEl.style.display = 'block';
        redirectMsgEl.style.display = 'none';

        // Profile photo (Google usually provides one)
        if (user.photoURL) {
          photoEl.src = user.photoURL;
          photoEl.style.display = 'block';
          placeholderEl.style.display = 'none';
        } else {
          photoEl.style.display = 'none';
          placeholderEl.style.display = 'flex';
        }

        nameEl.textContent = user.displayName || "Cupcake Friend";
        emailEl.textContent = user.email || "No email available";
        uidEl.textContent = user.uid;

        // Timestamps (convert to readable date)
        const lastSignIn = user.metadata?.lastSignInTime 
          ? new Date(user.metadata.lastSignInTime).toLocaleString() 
          : "Unknown";
        const creation = user.metadata?.creationTime 
          ? new Date(user.metadata.creationTime).toLocaleString() 
          : "Unknown";

        lastSignInEl.textContent = lastSignIn;
        creationEl.textContent = creation;

        // Optional: console.log full user for debugging
        console.log("Signed-in user:", user);
      } else {
        // No user â†’ redirect after short message
        redirectMsgEl.style.display = 'block';
        setTimeout(() => {
          window.location.href = 'index.html';  // â† change to your login/landing page
        }, 2000);
      }
    });

    // Sign out button
    signOutBtn.addEventListener('click', async () => {
      try {
        await signOut(auth);
        window.location.href = 'index.html';  // back to landing/login
      } catch (error) {
        console.error("Sign out error:", error);
        alert("Could not sign out. Try again.");
      }
    });
  </script>

</body>
</html>
